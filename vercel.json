{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" }
  ],
  "routes": [{ "src": "/(.*)", "dest": "/frontend/$1" }]
}
